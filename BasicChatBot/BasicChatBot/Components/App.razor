<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <!-- Bootstrap CSS for responsive design and UI components -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom application styles -->
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <!-- Auto-generated component-specific styles -->
    <link rel="stylesheet" href="@Assets["BasicChatBot.styles.css"]" />
    <ImportMap />
    <HeadOutlet />
</head>

<body>
    <!-- Blazor routing component that renders the appropriate page -->
    <Routes />
    
    <!-- Blazor framework JavaScript for interactive functionality -->
    <script src="_framework/blazor.web.js"></script>
    
    <!-- Custom JavaScript utilities for the chat interface -->
    <script>
        // Scrolls a container element to the bottom to show the latest content
        // Used in the chat interface to automatically scroll to new messages
        window.scrollToBottom = (element) => {
            if (element) {
                element.scrollTop = element.scrollHeight;
            }
        };
    </script>
</body>

</html>
